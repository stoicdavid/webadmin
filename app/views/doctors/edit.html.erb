<h1>Editar doctor</h1>

<% form_for(@doctor) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :nombre_2 %><br />
    <%= f.text_field :nombre_2 %>
  </p>
  <p>
    <%= f.label :app_pat %><br />
    <%= f.text_field :app_pat %>
  </p>
  <p>
    <%= f.label :app_mat %><br />
    <%= f.text_field :app_mat %>
  </p>
  <p>
     Especialidad <br />
    <%= select :doctor,:especialidad_id, Especialidad.find_all, :prompt => "Selecciona la especialidad" %>
  </p>
  <p>
    <%= f.label 'Direccion' %><br />
    <%= f.text_field :calle %>
    <%= f.text_field :colonia %>
    <%= f.text_field :estado %>
    <%= f.text_field :cp %>
  </p>
  <p>
    <%= f.label :telefono_consultorio %><br />
    <%= f.text_field :telefono_consultorio %>
  </p>
  <p>
    <%= f.label :celular %><br />
    <%= f.text_field :celular %>
  </p>
  <p>
    <%= f.label :correo %><br />
    <%= f.text_field :correo %>
  </p>
  <p>
    <%= f.label :fax %><br />
    <%= f.text_field :fax %>
  </p>
  <p>

	<div id ="fiscal">
		<h4>RFC</h4><br/>
		<%= f.text_field :rfc_doc %><br>
		<h4>Razón Social</h4><br/>
		<%= f.text_field :razon_doc %><br>

		<h4>Domicilio fiscal</h4><br/>
	
	
		  	<%= f.label 'Calle' %><br>
			<%= f.text_field :calle_fis  %>

		  	<%= f.label 'Exterior' %>
			<%= f.text_field :num_ext_fis %>


		  	<%= f.label 'Interior' %>
			<%= f.text_field :num_int_fis %>

		<p>
			<%= f.label 'Colonia' %>
			<%= f.text_field :colonia_fis  %>
		</p>

		<p>
			<%= f.label 'Delegación / Municipio' %>
			<%= f.text_field :del_mun_fis  %>
			<%= f.label 'Estado' %>
			<%= f.text_field :estado_fis  %>
			<%= f.label 'Código Postal' %>
			<%= f.text_field :cp_fis  %>
		</p>	
	</div>
	
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @doctor %> |
<%= link_to 'Back', doctors_path %>
