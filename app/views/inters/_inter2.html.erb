<% form_for(@inter,:url => (@inter.new_record? ? inters_path: @inter)) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :principal %><br />
    <%= f.text_area :principal,:cols => "100",:rows => "20"  %>
  </p>
        <%= f.hidden_field :consulta_id,:value => @consulta.id %>
		<%= f.hidden_field :operation_id,:value => @operacion_id %>
  <p>
    <%= f.label :activaciones %><br />
    <%= f.text_area :activaciones,:cols => "100",:rows => "20" %>
  </p>
  <p>
    <%= f.label :conclusion %><br />
    <%= f.text_area :conclusion,:cols => "100",:rows => "20" %>
  </p>
  <p>
    <%= f.submit "Crear"%>

  </p>
<% end %>
