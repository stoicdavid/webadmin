<h1>Editar referencia</h1>

<% form_for(@referencia) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :nombre %><br />
    <%= f.text_field :nombre %>
  </p>
  <p>
    <%= f.label :apellidos %><br />
    <%= f.text_field :apellidos %>
  </p>

  <p>
    <%= f.label :telefono_casa %><br />
    <%= f.text_field :telefono_casa %>
  </p>
  <p>
    <%= f.label :ref_id %><br />
    <%= f.text_field :ref_id %>
  </p>
  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'Show', @referencia %> |
<%= link_to 'Back', referencias_path %>
