<div class="avatar">
	
<%= image_tag url_for_file_column(@doctor, "imagen") if @doctor.imagen!=nil%>	
</div>

<p>
  <b>Nombre:</b>
  <%=h @doctor.nombre_completo %>
</p>


<p>
  <b>Especialidad:</b>
  <%=h Especialidad.find(@doctor.especialidad_id).especialidad %>
  
</p>

<p>
  <b>Direccion:</b>
  <%=h @doctor.direccion_completa %>
</p>

<p>
  <b>Telefono consultorio:</b>
  <%=h @doctor.telefono_consultorio %>
</p>

<p>
  <b>Celular:</b>
  <%=h @doctor.celular %>
</p>

<p>
  <b>Correo:</b>
  <%=h @doctor.correo %>
</p>

<p>
  <b>Fax:</b>
  <%=h @doctor.fax %>
</p>

<% if @doctor.usuario!=nil %>
	<%= link_to 'Modifica Password', :controller => "usuarios", :action => "edit", :id => @doctor.usuario.id %>
<% end %>

<% if current_usuario.has_role?("admin") && @doctor.usuario==nil %>
<%= button_to 'Crea Usuario', {:action => "crea_usuario", :id => @doctor.id } %>
<%= link_to 'Editar', edit_doctor_path(@doctor) %> |
<%= link_to 'Regresar', doctors_path %>
<% end %>